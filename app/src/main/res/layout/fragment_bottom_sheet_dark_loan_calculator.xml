<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/loanCalculatorExit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:background="?attr/editTextBackground"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="@string/cancel"
                    android:textColor="@color/background3_dark"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/background2_dark">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/currencySpinner"
                        android:layout_alignParentStart="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/summaLoanTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background2_dark"
                            android:ems="6"
                            android:textColor="@color/background3_dark"
                            android:hint="@string/loan1"
                            android:textSize="19sp"
                            android:inputType="number"
                            android:paddingStart="0dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:id="@+id/currencySpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:spinnerMode="dropdown" />

                </RelativeLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/percentLoanTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:textColor="@color/background3_dark"
                        android:background="@color/background2_dark"
                        android:hint="@string/loan2"
                        android:textSize="19sp"
                        android:inputType="numberDecimal"
                        android:paddingStart="0dp"
                        />
                </com.google.android.material.textfield.TextInputLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/background2_dark">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/monthYearSpinner"
                        android:layout_alignParentStart="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/periodLoanTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="5"
                            android:textColor="@color/background3_dark"
                            android:background="@color/background2_dark"
                            android:hint="@string/loan3"
                            android:textSize="17sp"
                            android:inputType="number"
                            android:paddingStart="0dp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:id="@+id/monthYearSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <Spinner
                    android:id="@+id/typeLoanSpinner"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/background2_dark"
                    android:spinnerMode="dropdown" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/dateStartLoanTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:layout_marginTop="20dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dateStartLoanTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:textColor="@color/background3_dark"
                        android:background="@color/background2_dark"
                        android:hint="@string/loan4"
                        android:textSize="19sp"
                        android:text=" "
                        android:paddingStart="0dp" />
                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/calculateLoanBtn"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:textStyle="bold"
                    app:backgroundTint="@color/color_selector_dark"
                    app:cornerRadius="20dp"
                    android:textColor="@color/background3_dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/loan5" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/background2_dark"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cornerRadius="20dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/loan1"                            android:textSize="16sp"
                            android:textColor="@color/background3_dark"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/loanTextView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/background3_dark"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/background2_dark"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cornerRadius="20dp">


                        <TextView
                            android:id="@+id/loanNameTextView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/loan6"
                            android:textSize="16sp"
                            android:textColor="@color/background3_dark"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/loanTextView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:textColor="@color/background3_dark"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/background2_dark"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cornerRadius="20dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/loan7"
                            android:textSize="16sp"
                            android:textColor="@color/background3_dark"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/loanTextView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/background3_dark"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/background2_dark"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cornerRadius="20dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/loan8"
                            android:textSize="16sp"
                            android:textColor="@color/background3_dark"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/loanTextView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/background3_dark"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/background2_dark"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cornerRadius="20dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/loan9"
                            android:textSize="16sp"
                            android:textColor="@color/background3_dark"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/loanTextView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/background3_dark"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/background2_dark"
                    android:padding="10dp"
                    android:layout_marginBottom="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cornerRadius="20dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/loan10"
                            android:textSize="16sp"
                            android:textColor="@color/background3_dark"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/loanTextView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/background3_dark"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            </ScrollView>


        </LinearLayout>

    </RelativeLayout>


</FrameLayout>