<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".accounts.BottomSheetAccountsAdd">

    <RelativeLayout
        android:id="@+id/new_operation_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/accountsAddExit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:background="?attr/editTextBackground"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="@string/cancel"
                    android:textColor="@color/background3"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:text="Новый счёт"
                    android:textColor="@color/background3"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/newAccountsDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="?attr/editTextBackground"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="@string/done"
                    android:textColor="@color/background3"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="27dp">

                        <ImageView
                            android:id="@+id/addAccountsEditIcon"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@color/background"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            />

                        <ImageView
                            android:id="@+id/accountsUpdateIcon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="49dp"
                            android:layout_marginRight="4dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/edit"
                            tools:ignore="RtlHardcoded" />

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/background2"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RelativeLayout
                            android:id="@+id/accountsAddBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/addAccountsIcon"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/text"
                                android:padding="7dp" />

                            <TextView
                                android:id="@+id/addAccountsName"
                                android:layout_toEndOf="@+id/addAccountsIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="5dp"
                                android:text="@string/title"
                                android:textSize="17sp"
                                android:textColor="@color/background3"
                                android:textStyle="bold" />


                            <EditText
                                android:id="@+id/addAccountsNameEdit"
                                android:layout_toEndOf="@+id/addAccountsName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:textColor="@color/background3"
                                android:singleLine="true"
                                />



                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/background2"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RelativeLayout
                            android:id="@+id/accountsBalanceAddBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/accountsBalanceIcon"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/calculator"
                                android:padding="7dp" />

                            <TextView
                                android:id="@+id/accountsBalanceName"
                                android:layout_toEndOf="@+id/accountsBalanceIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="5dp"
                                android:text="@string/balance"
                                android:textSize="17sp"
                                android:textColor="@color/background3"
                                android:textStyle="bold" />


                            <EditText
                                android:id="@+id/accountsBalanceNameEdit"
                                android:layout_toEndOf="@+id/accountsBalanceName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="40dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:inputType="numberDecimal|numberSigned"
                                android:textColor="@color/background3"
                                android:singleLine="true"
                                />



                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/background2"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RelativeLayout
                            android:id="@+id/accountsCurrencyAddBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/accountsCurrencyIcon"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/currency2"
                                android:padding="7dp" />

                            <TextView
                                android:id="@+id/accountsCurrencyName"
                                android:layout_toEndOf="@+id/accountsCurrencyIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="5dp"
                                android:text="@string/currency"
                                android:textSize="17sp"
                                android:textColor="@color/background3"
                                android:textStyle="bold" />



                            <TextView
                                android:id="@+id/accountsCurrencyNameEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toStartOf="@+id/Imgright1"
                                android:textColor="@color/background3"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/Imgright1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right" />





                        </RelativeLayout>

                    </LinearLayout>





                </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/background2"
            android:padding="10dp"
            android:layout_marginVertical="10dp">

            <RelativeLayout
                android:id="@+id/accountsAddRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/save"
                    android:textColor="@color/background3"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


</FrameLayout>