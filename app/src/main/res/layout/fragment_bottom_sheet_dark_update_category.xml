<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:layout_gravity="center_horizontal"
    tools:context=".category.updateCategory.BottomSheetUpdateCategoryFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/categoryEditExit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:background="?attr/editTextBackground"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="@string/cancel"
                    android:textColor="@color/background3_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:text="@string/editCategories"
                    android:textColor="@color/background3_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="27dp">

                    <ImageView
                        android:id="@+id/categoryEditIcon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@color/background_dark"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        />

                    <ImageView
                        android:id="@+id/categoryUpdateIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="49dp"
                        android:layout_marginRight="4dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/edit"
                        tools:ignore="RtlHardcoded" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/background2_dark"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cornerRadius="20dp">

                        <TextView
                            android:id="@+id/updateCategoryName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:text="@string/title"
                            android:textSize="17sp"
                            android:textColor="@color/background3_dark"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/updateCategoryNameEdit"
                            android:layout_toEndOf="@+id/updateCategoryName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/background3_dark"
                            android:singleLine="true"
                            />



                    </RelativeLayout>

                </LinearLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/addCategoryLinearLayout"
                        android:clickable="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/background2_dark"
                        android:padding="10dp"
                        android:layout_marginVertical="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="20dp">

                            <TextView
                                android:id="@+id/addUpdateTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:text="@string/addCategory"
                                android:textColor="@color/background3_dark"
                                android:textSize="17sp"
                                android:textStyle="bold" />



                        </RelativeLayout>

                    </LinearLayout>




                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_above="@+id/addCategoryLinearLayout"
                        android:id="@+id/updateSubcategoryRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        tools:listitem="@layout/category_item" />


                </RelativeLayout>


            </LinearLayout>



        </LinearLayout>


    </RelativeLayout>



</FrameLayout>