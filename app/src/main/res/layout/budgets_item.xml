<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cornerRadius="20dp"
    android:layout_marginBottom="2dp"
    android:layout_centerHorizontal="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="7dp"
        app:cornerRadius="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:background="@drawable/round_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/budgetsNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Название"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/background3"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/background3_dark"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/budgetsNamePeriodTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Название бюджета"
                            android:textColor="@color/background3"
                            android:textSize="15sp"
                            />

                        <TextView
                            android:id="@+id/budgetsSummaTextView"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5000.02"
                            android:textColor="@color/background3"
                            android:textSize="15sp"
                            />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/budgetsProgressBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:max="100"
                            android:progress="0"
                            android:secondaryProgress="0" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/budgetsValueTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="665.00"
                            android:textColor="@color/background3"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_below="@+id/budgetsValueTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Потрачено"
                            android:textColor="@color/background3"
                            android:textSize="15sp"
                            />

                        <TextView
                            android:id="@+id/budgetsProcentTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="88%"
                            android:textColor="@color/background3"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/budgetsValueNowTextView"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4350.00"
                            android:textColor="@color/background3"
                            android:textSize="15sp"
                            />

                        <TextView
                            android:layout_below="@+id/budgetsValueNowTextView"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Осталось"
                            android:textColor="@color/background3"
                            android:textSize="15sp"
                            />


                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>




    </RelativeLayout>


</RelativeLayout>