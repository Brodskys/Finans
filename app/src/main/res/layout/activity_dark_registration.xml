<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".registration.RegistrationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/registration_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:onClick="authorizationBack"
                    android:text="@string/back"
                    android:textColor="@color/background3_dark"
                    android:textSize="6.5pt" />

                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:text="@string/registration"
                    android:textColor="@color/background3_dark"
                    android:textSize="13pt" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginHorizontal="25dp">

                <TextView
                    android:id="@+id/email_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:text="@string/email"
                    android:textColor="@color/background3_dark"
                    android:textSize="9pt"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_below="@+id/email_txt"
                    android:background="@drawable/round_20_dark"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/registeremailIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="7dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/email_dark" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_toEndOf="@+id/registeremailIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/createUserTextEmailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:background="@drawable/round_20_dark"
                            android:hint="@string/enterEmail"
                            android:inputType="textEmailAddress"
                            android:paddingStart="0dp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/password_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email_layout"
                    android:layout_marginStart="17dp"
                    android:text="@string/password"
                    android:textColor="@color/background3_dark"
                    android:textSize="9pt"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    />

                <LinearLayout
                    android:id="@+id/password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_below="@+id/password_txt"
                    android:background="@drawable/round_20_dark"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/registerpasswordIcon"
                        android:layout_centerVertical="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="7dp"
                        android:src="@drawable/key_dark" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_toEndOf="@+id/registerpasswordIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/createUserTextPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:background="@drawable/round_20_dark"
                            android:hint="@string/enterPassword"
                            android:inputType="textPassword"
                            android:paddingStart="0dp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/confirm_password_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/password_layout"
                    android:layout_marginStart="17dp"
                    android:text="@string/confirmPassword"
                    android:textColor="@color/background3_dark"
                    android:textSize="9pt"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    />


                <LinearLayout
                    android:id="@+id/confirm_password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_below="@+id/confirm_password_txt"
                    android:background="@drawable/round_20_dark"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/confirmpasswordIcon"
                        android:layout_centerVertical="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="7dp"
                        android:src="@drawable/key_dark" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_toEndOf="@+id/confirmpasswordIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/createUserTextConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:background="@drawable/round_20_dark"
                            android:hint="@string/confirmPassword"
                            android:inputType="textPassword"
                            android:paddingStart="0dp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    </RelativeLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/authUser_btn"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/registration"
                    android:onClick="createUserWithEmailAndPassword"
                    android:layout_below="@+id/confirm_password_layout"
                    android:textColor="@color/background3_dark"
                    android:textStyle="bold"
                    app:backgroundTint="@color/color_selector_dark"
                    app:cornerRadius="20dp" />

            </RelativeLayout>




        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>