<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".plans.budgets.BottomSheetBudgetUpdate">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_dark"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/budgetsUpdateExit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:background="?attr/editTextBackground"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="@string/cancel"
                    android:textColor="@color/background3_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="@string/changeBudget"
                    android:textColor="@color/background3_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/budgetsUpdateDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:background="?attr/editTextBackground"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="@string/delete"
                    android:textColor="@color/background3_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/background2_dark"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:id="@+id/accountsAddBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cornerRadius="20dp">

                        <ImageView
                            android:id="@+id/addBudgetsIcon"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/text"
                            android:padding="7dp" />

                        <TextView
                            android:id="@+id/addBudgetsName"
                            android:layout_toEndOf="@+id/addBudgetsIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:text="@string/title"
                            android:textSize="17sp"
                            android:textColor="@color/background3_dark"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/updateBudgetsNameEdit"
                            android:layout_toEndOf="@+id/addBudgetsName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/background3_dark"
                            android:singleLine="true"
                            />



                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/budgetsBalanceAddBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/background2_dark"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cornerRadius="20dp">

                        <ImageView
                            android:id="@+id/budgetsBalanceIcon"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/calculator"
                            android:padding="7dp" />

                        <TextView
                            android:id="@+id/budgetsBalanceName"
                            android:layout_toEndOf="@+id/budgetsBalanceIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:text="@string/balance"
                            android:textSize="17sp"
                            android:textColor="@color/background3_dark"
                            android:textStyle="bold" />


                        <EditText
                            android:id="@+id/updateBudgetsBalanceNameEdit"
                            android:layout_toEndOf="@+id/budgetsBalanceName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:inputType="numberDecimal"
                            android:textColor="@color/background3_dark"
                            android:singleLine="true"
                            />



                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/background2_dark"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:id="@+id/updateBudgetsPeriodAddBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cornerRadius="20dp">

                        <ImageView
                            android:id="@+id/budgetsPeriodAddIcon"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/time"
                            android:padding="7dp" />

                        <TextView
                            android:id="@+id/budgetsPeriodAddName"
                            android:layout_toEndOf="@+id/budgetsPeriodAddIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:text="@string/period"
                            android:textSize="17sp"
                            android:textColor="@color/background3_dark"
                            android:textStyle="bold" />



                        <TextView
                            android:id="@+id/updateBudgetsPeriodNameEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:layout_toStartOf="@+id/budgetsPeriodAddImgright1"
                            android:textColor="@color/background3_dark"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/budgetsPeriodAddImgright1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/right" />

                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/background2_dark"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:id="@+id/updateBudgetsCategoryBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cornerRadius="20dp">

                        <ImageView
                            android:id="@+id/updateBudgetsCategoryIcon"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/category"
                            android:padding="7dp" />

                        <TextView
                            android:id="@+id/budgetsCategoryAddName"
                            android:layout_toEndOf="@+id/updateBudgetsCategoryIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:text="@string/categories"
                            android:textSize="17sp"
                            android:textColor="@color/background3_dark"
                            android:textStyle="bold" />



                        <TextView
                            android:id="@+id/updateBudgetsCategoryNameEdit"
                            android:layout_toEndOf="@+id/budgetsCategoryAddName"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:textDirection="rtl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_toStartOf="@+id/budgetsCategoryAddImgright1"
                            android:textColor="@color/background3_dark"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/budgetsCategoryAddImgright1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/right_dark" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/background2_dark"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:id="@+id/updateBudgetsAccountsBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cornerRadius="20dp">

                        <ImageView
                            android:id="@+id/updateBudgetsAccountsIcon"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/coins"
                            android:padding="7dp" />

                        <TextView
                            android:id="@+id/budgetsAccountsAddName"
                            android:layout_toEndOf="@+id/updateBudgetsAccountsIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:text="@string/account"
                            android:textSize="17sp"
                            android:textColor="@color/background3_dark"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/updateBudgetsAccountsNameEdit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/budgetsAccountsAddName"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_toStartOf="@+id/budgetsAccountsAddImgright1"
                            android:textColor="@color/background3_dark"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:textDirection="rtl"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/budgetsAccountsAddImgright1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/right_dark" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/background2_dark"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cornerRadius="20dp">

                        <ImageView
                            android:id="@+id/notificationIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="7dp"
                            android:src="@drawable/notification" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:layout_toEndOf="@+id/notificationIcon"
                            android:text="@string/budget20"
                            android:textColor="@color/background3_dark"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/updateNotification80Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:switchMinWidth="50dp"
                            />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/background2_dark"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cornerRadius="20dp">

                        <ImageView
                            android:id="@+id/smsIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="7dp"
                            android:src="@drawable/notification" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:layout_toEndOf="@+id/smsIcon"
                            android:text="@string/budgetOverruns"
                            android:textColor="@color/background3_dark"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/updateOverrunsSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:switchMinWidth="50dp"
                            />
                    </RelativeLayout>


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/updateBudgetsLinearLayout"
                        android:clickable="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/background2_dark"
                        android:padding="10dp"
                        android:layout_marginVertical="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:text="@string/update"
                                android:textColor="@color/background3_dark"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>



                </RelativeLayout>


            </LinearLayout>



        </LinearLayout>


    </RelativeLayout>


</FrameLayout>