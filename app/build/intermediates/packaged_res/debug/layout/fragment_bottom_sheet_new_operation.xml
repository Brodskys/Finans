<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/new_operation_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/newOperationExit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:background="?attr/editTextBackground"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="@string/cancel"
                    android:textColor="@color/background3"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:text="@string/newOperation"
                    android:textColor="@color/background3"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/newOperationDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="?attr/editTextBackground"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="@string/done"
                    android:textColor="@color/background3"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/tab_layout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="30dp"
                        android:orientation="vertical"
                        tools:ignore="MissingConstraints">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tab_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/tablayout_shape"
                            app:tabIndicator="@drawable/tab_indicator"
                            app:tabIndicatorColor="@color/background3"
                            app:tabTextAppearance="@style/TabTextAppearance">

                        </com.google.android.material.tabs.TabLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="30dp"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/currency_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:text="@string/currency"
                                android:textColor="@color/background3"
                                android:textSize="16sp" />

                            <Button
                                android:id="@+id/currency_btn"
                                android:layout_width="70dp"
                                android:layout_height="43dp"
                                android:layout_below="@id/currency_textView"
                                android:clickable="false"
                                android:textColor="@color/background3"
                                android:textSize="16sp"
                                app:backgroundTint="@color/color_selector" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/currency_EditText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:text="@string/total"
                                android:textColor="@color/background3"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/amount_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/currency_EditText"
                                android:hint="0.00"
                                android:inputType="numberDecimal"
                                android:textColor="@color/background3"
                                android:textColorHint="@color/background3" />

                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:text="@string/main"
                        android:textColor="@color/background3"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/round_20"
                        android:orientation="vertical"
                        android:padding="10dp">


                        <RelativeLayout
                            android:id="@+id/accountsRelativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/accountIcon_NewOperation"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:padding="7dp"
                                android:src="@drawable/coins" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@+id/accountIcon_NewOperation"
                                android:text="@string/account"
                                android:textColor="@color/background3"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/accountName_NewOperation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toStartOf="@+id/Imgright1"
                                android:textColor="@color/background3"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/Imgright1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/categoryRelativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/categoryIcon"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:padding="7dp"
                                android:src="@drawable/category" />

                            <TextView
                                android:id="@+id/category_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@+id/categoryIcon"
                                android:text="@string/categories"
                                android:textColor="@color/background3"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/subcategory_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="15dp"
                                android:layout_toStartOf="@+id/Imgright2"
                                android:layout_toEndOf="@+id/category_txt"
                                android:ellipsize="marquee"
                                android:singleLine="true"
                                android:textColor="@color/background3"
                                android:textDirection="rtl"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/Imgright2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/dateTimeRelativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/dateandtimeIcon"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:padding="7dp"
                                android:src="@drawable/datetime" />

                            <TextView
                                android:id="@+id/dateandtimeTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@+id/dateandtimeIcon"
                                android:text="@string/dateandtime"
                                android:textColor="@color/background3"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/dateTimeTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="7dp"
                                android:layout_toStartOf="@+id/Imgright3"
                                android:layout_toEndOf="@+id/dateandtimeTxt"
                                android:ellipsize="marquee"
                                android:gravity="right"
                                android:singleLine="true"
                                android:textColor="@color/background3"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/Imgright3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right" />

                        </RelativeLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="7dp"
                        android:padding="5dp"
                        android:text="@string/details"
                        android:textColor="@color/background3"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/round_20"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RelativeLayout
                            android:id="@+id/noteRelativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/languageIcon2"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:padding="7dp"
                                android:src="@drawable/note" />

                            <TextView
                                android:id="@+id/txtNote"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@+id/languageIcon2"
                                android:text="@string/note"
                                android:textColor="@color/background3"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/noteTextView"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toStartOf="@+id/Imgright22"
                                android:layout_toEndOf="@+id/txtNote"
                                android:ellipsize="marquee"
                                android:singleLine="true"
                                android:textColor="@color/background3"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/Imgright22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayoutLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/currencyIcon3"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:padding="7dp"
                                android:src="@drawable/geolocation" />

                            <TextView
                                android:id="@+id/txtLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@+id/currencyIcon3"
                                android:text="@string/addLocation"
                                android:textColor="@color/background3"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/locationTextView"
                                android:layout_width="55dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_toStartOf="@+id/Imgright33"
                                android:layout_toEndOf="@+id/txtLocation"
                                android:ellipsize="marquee"
                                android:singleLine="true"
                                android:textColor="@color/background3"
                                android:textStyle="bold" />


                            <ImageView
                                android:id="@+id/Imgright33"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayoutPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/photoBillImageView"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:padding="7dp"
                                android:src="@drawable/photo" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@+id/photoBillImageView"
                                android:text="@string/attachPhoto"
                                android:textColor="@color/background3"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayoutQR"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/qrIcon"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:padding="7dp"
                                android:src="@drawable/qr" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@+id/qrIcon"
                                android:text="@string/scanningQRcode"
                                android:textColor="@color/background3"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayoutOCR"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/currencyIcon6"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:padding="7dp"
                                android:src="@drawable/receipt" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@+id/currencyIcon6"
                                android:text="@string/scanningReceipt"
                                android:textColor="@color/background3"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right" />

                        </RelativeLayout>


                    </LinearLayout>


                    <Button
                        android:id="@+id/good_btn"
                        style="@style/Widget.MaterialComponents.Button.Icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/add"
                        android:textColor="@color/background3"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/color_selector"
                        app:cornerRadius="20dp" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/swipeNewOperation_refreshLayout"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/fullScreenImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:scaleType="fitCenter" />

    </RelativeLayout>


</FrameLayout>