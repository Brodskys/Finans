<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".analytics.AnalyticsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomNavigationView"
            android:background="@color/background_dark"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/round_20_dark"
                android:orientation="vertical"
                android:padding="10dp">


                <RelativeLayout
                    android:id="@+id/startDateRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="20dp">

                    <ImageView
                        android:id="@+id/categoryIcon"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="7dp"
                        android:src="@drawable/datetime" />

                    <TextView
                        android:id="@+id/category_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/categoryIcon"
                        android:text="Начальная дата"
                        android:textColor="@color/background3_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/startDateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_toStartOf="@+id/Imgright2"
                        android:layout_toEndOf="@+id/category_txt"
                        android:ellipsize="marquee"
                        android:singleLine="true"
                        android:textColor="@color/background3_dark"
                        android:textDirection="rtl"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/Imgright2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_dark" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/endDateRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cornerRadius="20dp">

                    <ImageView
                        android:id="@+id/dateandtimeIcon"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="7dp"
                        android:src="@drawable/datetime" />

                    <TextView
                        android:id="@+id/dateandtimeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/dateandtimeIcon"
                        android:text="Конечная дата"
                        android:textColor="@color/background3_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/endDateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        android:layout_toEndOf="@+id/dateandtimeTxt"
                        android:layout_toStartOf="@+id/Imgright3"
                        android:ellipsize="marquee"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="@color/background3_dark"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/Imgright3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/right_dark" />

                </RelativeLayout>


            </LinearLayout>


            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/staticChart"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fitsSystemWindows="true"
            app:itemBackground="@color/background2_dark"
            app:itemIconTint="@drawable/selector_dark"
            app:itemTextColor="@drawable/selector_dark"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:menu="@menu/bottom_nav">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/navigationViewAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="add"
                android:layout_gravity="center"
                android:src="@drawable/plus2"
                app:fabCustomSize="47dp"
                app:layout_anchor="@id/bottomNavigationView"
                tools:ignore="SpeakableTextPresentCheck">

            </com.google.android.material.floatingactionbutton.FloatingActionButton>

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>