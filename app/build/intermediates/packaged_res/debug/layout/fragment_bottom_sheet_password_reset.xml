<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheet"
    android:background="@color/background"
    android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxHeight="400dp"
        tools:ignore="MissingConstraints">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textResetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resetPassword"
                android:layout_marginBottom="50dp"
                android:textColor="@color/background3"
                android:textSize="14pt" />


            <TextView
                android:id="@+id/email_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_below="@+id/textResetPassword"
                android:text="@string/email"
                android:textColor="@color/background3"
                android:textSize="9pt"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/email_layout"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_below="@+id/email_txt"
                android:background="@drawable/round_20"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/emailIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="7dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/email" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_toEndOf="@+id/emailIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorEnabled="true"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextTextEmailAddressReset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_20"
                            android:hint="@string/enterEmail"
                            android:inputType="textEmailAddress"
                            android:paddingStart="0dp"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>


            </LinearLayout>



            <Button
                android:id="@+id/resetPassword_btn"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:text="@string/reset"
                android:onClick="signInWithEmailAndPassword"
                android:layout_below="@+id/email_layout"
                android:textColor="@color/background3"
                android:textStyle="bold"
                app:backgroundTint="@color/color_selector"
                app:cornerRadius="20dp" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/languageLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <TextView
                    android:id="@+id/resetPasswordExit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/editTextBackground"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="@string/cancel"
                    android:textColor="@color/background3"
                    android:textSize="18sp"
                    android:textStyle="bold" />







        </LinearLayout>


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>