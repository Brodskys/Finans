<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginVertical="6dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayoutOperation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="20dp">

            <ImageView
                android:id="@+id/categoryIcon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="center"
                />

            <TextView
                android:id="@+id/operationType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/categoryIcon"
                android:textSize="8pt"
                android:textColor="@color/background3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/operationCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/categoryIcon"
                android:layout_marginTop="30dp"
                android:textSize="4.7pt"
                android:textColor="@color/background3"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/operationValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:textSize="6.5pt"
                android:textColor="@color/background3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/operationDatetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_alignParentEnd="true"
                android:textSize="5.5pt"
                android:textColor="@color/background3"
                android:textStyle="bold" />




        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>