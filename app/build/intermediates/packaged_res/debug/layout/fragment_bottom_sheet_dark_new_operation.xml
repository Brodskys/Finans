<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheet"
    android:background="@color/background_dark"
    android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_dark"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/newOperationExit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:background="?attr/editTextBackground"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="@string/cancel"
                    android:textColor="@color/background3_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:text="@string/newOperation"
                    android:textColor="@color/background3_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/newOperationDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:padding="5dp"
                    android:background="?attr/editTextBackground"
                    android:text="@string/done"
                    android:textColor="@color/background3_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/tab_layout2"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="5dp"
                        tools:ignore="MissingConstraints">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tab_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/tablayout_shape_dark"
                            app:tabIndicatorColor="@color/background3_dark"
                            app:tabIndicator="@drawable/tab_indicator"
                            app:tabTextAppearance="@style/TabTextAppearance">

                        </com.google.android.material.tabs.TabLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/currency_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/background3_dark"
                                android:text="@string/currency"
                                android:layout_alignParentTop="true" />

                            <Button
                                android:id="@+id/currency_btn"
                                android:layout_width="70dp"
                                android:layout_height="45dp"
                                app:backgroundTint="@color/color_selector_dark"
                                android:textColor="@color/background3_dark"
                                android:layout_below="@id/currency_textView"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/currency_EditText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/background3_dark"
                                android:text="@string/total"
                                android:layout_alignParentTop="true" />
                            <EditText
                                android:id="@+id/amount_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:textColor="@color/background3_dark"
                                android:textColorHint="@color/background3_dark"
                                android:hint="0.00"
                                android:layout_below="@id/currency_EditText" />

                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/main"
                        android:textColor="@color/background3_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/round_20_dark"
                        android:orientation="vertical"
                        android:padding="10dp">




                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/languageIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="7dp"
                                android:src="@drawable/coins" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@+id/languageIcon"
                                android:text="@string/account"
                                android:textColor="@color/background3_dark"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toStartOf="@+id/Imgright1"
                                android:text="Наличные"
                                android:textColor="@color/background3_dark"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/Imgright1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right_dark" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/categoryRelativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/categoryIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="7dp"
                                android:src="@drawable/category" />

                            <TextView
                                android:id="@+id/category_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@+id/categoryIcon"
                                android:text="@string/categories"
                                android:textColor="@color/background3_dark"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/subcategory_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toStartOf="@+id/Imgright2"
                                android:textColor="@color/background3_dark"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/Imgright2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right_dark" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/dateTimeRelativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/dateandtimeIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="7dp"
                                android:src="@drawable/datetime" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@+id/dateandtimeIcon"
                                android:text="@string/dateandtime"
                                android:textColor="@color/background3_dark"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/dateTimeTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toStartOf="@+id/Imgright3"
                                android:textColor="@color/background3_dark"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/Imgright3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right_dark" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/passwordIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="7dp"
                                android:src="@drawable/repeat" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@+id/passwordIcon"
                                android:text="@string/repeattheoperation"
                                android:textColor="@color/background3_dark"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/passwordSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:switchMinWidth="50dp"
                                android:theme="@style/passwordSwitch" />
                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/details"
                        android:textColor="@color/background3_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/round_20_dark"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RelativeLayout
                            android:id="@+id/noteRelativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/languageIcon2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="7dp"
                                android:src="@drawable/note" />

                            <TextView
                                android:id="@+id/txtNote"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@+id/languageIcon2"
                                android:text="@string/note"
                                android:textColor="@color/background3_dark"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/noteTextView"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@+id/txtNote"
                                android:layout_toStartOf="@+id/Imgright22"
                                android:textColor="@color/background3_dark"
                                android:singleLine="true"
                                android:ellipsize="marquee"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/Imgright22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right_dark" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayoutLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/currencyIcon3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="7dp"
                                android:src="@drawable/geolocation" />

                            <TextView
                                android:id="@+id/txtLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@+id/currencyIcon3"
                                android:text="@string/addLocation"
                                android:textColor="@color/background3_dark"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/locationTextView"
                                android:layout_width="55dp"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@+id/txtLocation"
                                android:layout_toStartOf="@+id/Imgright33"
                                android:textColor="@color/background3_dark"
                                android:singleLine="true"
                                android:ellipsize="marquee"
                                android:textStyle="bold" />


                            <ImageView
                                android:id="@+id/Imgright33"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right_dark" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayoutPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/currencyIcon4"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="7dp"
                                android:src="@drawable/photo" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@+id/currencyIcon4"
                                android:text="@string/attachPhoto"
                                android:textColor="@color/background3_dark"
                                android:textStyle="bold" />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right_dark" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cornerRadius="20dp">

                            <ImageView
                                android:id="@+id/currencyIcon6"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="7dp"
                                android:src="@drawable/receipt" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@+id/currencyIcon6"
                                android:text="@string/scanningReceipt"
                                android:textColor="@color/background3_dark"
                                android:textStyle="bold" />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right_dark" />

                        </RelativeLayout>




                    </LinearLayout>




                    <Button
                        android:id="@+id/good_btn"
                        style="@style/Widget.MaterialComponents.Button.Icon"
                        android:textStyle="bold"
                        app:backgroundTint="@color/color_selector_dark"
                        app:cornerRadius="20dp"
                        android:textColor="@color/background3_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="15dp"
                        android:text="@string/add" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>


    </RelativeLayout>



</FrameLayout>